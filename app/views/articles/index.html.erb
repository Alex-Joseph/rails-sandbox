<!DOCTYPE html>
  <script>
    
    var geocoder;
    var map;
    function initialize() {
      geocoder = new google.maps.Geocoder();
      var latlng = new google.maps.LatLng(43.7264709,-79.4015859);
      var mapOptions = {
        zoom: 10,
        center: latlng
      }
      map = new google.maps.Map(document.getElementById('map'), mapOptions);

      address = ["456 Donlands Ave", "446 Symington Ave", "88 Osler St", "38 Morse st, Toronto"]
      
      address.forEach(function(a, i) {
        geocoder.geocode(
        { 'address': a }, function(results, status) {
          if (status == 'OK') {
            var marker = new google.maps.Marker({
              map: map,
              position: results[0].geometry.location,
              label: `A${i+1}`
            });
          } else {
            alert('Geocode was not successful for the following reason: ' + status);
          }
        })
      });
    }
    
  </script> 

<body onload="initialize()">
 
 <div id="map"></div>
 
</body>

