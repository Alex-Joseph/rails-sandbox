<br>
<div class="container">
  <h1>My Blogs</h1>
  <br>
  <% if @articles.empty? %>

  <h5>No blogs, why not create one below?</h5>
  <%= link_to "New blog", new_article_path, class: "btn btn-primary" %>

  <% else %>
  <table class="table">
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Text</th>
    </tr>

    <% @articles.each do |article| %>
    <tr>
        <td><%= article.title %></td>
        <td><%= article.text %></td>
        <td><%= link_to "Show", article_path(article) %></td>
        <td><%= link_to "Edit", edit_article_path(article) %></td>
        <td><%= link_to "Delete", article_path(article),
                method: :delete,
                data: { confirm: "Are you sure?" } %></td>
    </tr>
    <% end %>
  </table>
  <% end %>
</div>
